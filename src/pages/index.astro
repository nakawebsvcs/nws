<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    setupAnimations();
  });

  // Also handle Astro's view transitions
  document.addEventListener('astro:page-load', () => {
    setupAnimations();
  });

  function setupAnimations() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
        // Special handling for the animated words
          if (entry.target.classList.contains('animated-words')) {
            const words = entry.target.querySelectorAll('.animate-word');
            words.forEach((word, index) => {
              // Set a delay for each word
              setTimeout(() => {
                word.classList.add("visible");
              }, index * 800); // 800ms between words
            });
          }
        }
      });
    },
    {
        threshold: 0.1,
      }
    );


    // About section
    const aboutElements = document.querySelectorAll(
      "#sbsr-1011 img, #sbsr-1011 .cs-title, #sbsr-1011 .cs-divider, #sbsr-1011 .cs-text, #sbsr-1011 .cs-subtitle"
    );
    aboutElements.forEach((el) => {
      el.classList.add("fade-in-scroll");
      observer.observe(el);
    });

    // Skills section
    const skillsColumns = document.querySelectorAll(
      "#skills-281 .cs-column"
    );
    if (skillsColumns.length >= 2) {
      skillsColumns[0].classList.add("skills-slide-left");
      skillsColumns[1].classList.add("skills-slide-right");
      observer.observe(skillsColumns[0]);
      observer.observe(skillsColumns[1]);
    }

    // Services section animations
    const serviceCards = document.querySelectorAll("#services-281 .cs-item");
    serviceCards.forEach((card, index) => {
      card.classList.add("fade-in-scroll");
      // Slow down the staggered animation by increasing delay
      card.style.transitionDelay = `${index * 0.3}s`;
      observer.observe(card);
    });

    // Portfolio cards animation
    const portfolioCards = document.querySelectorAll("#portfolio-1716 .cs-item");
    portfolioCards.forEach((card, index) => {
      card.classList.add("fade-in-scroll");
      // Slow down the staggered animation by increasing delay
      card.style.transitionDelay = `${index * 0.3}s`;
      observer.observe(card);
    });
  }

