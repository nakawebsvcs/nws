  function animateHero() {
    // Wait a moment to ensure the page is fully loaded
    setTimeout(() => {
      // Get all direct children of the flex-group
      const heroElements = document.querySelectorAll("#hero .cs-flex-group > *");
      
      // Animate each element with a delay
      heroElements.forEach((el, index) => {
        // Set a delay for each element
        el.style.transitionDelay = `${index * 300}ms`;
        
        // Add the animation class
        el.classList.add("hero-animate");
      });
    }, 300);
  }

